<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.mvvm.common.viewmodel.ItemChargeListViewModel" />
        <import type="com.mvvm.base.utils.BigDecimalUtils"/>

    </data>

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:orientation="vertical"
        style="@style/padding_16"
        updateBackground="@{viewModel.isSelected}"
        android:background="@drawable/rl_shape_unselected"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            >
            <TextView
                android:id="@+id/tv_halfdaypackage"
                android:text="@{viewModel.titel}"
                style="@style/wrap"
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>
            <TextView
                android:id="@+id/iv_give_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="@{viewModel.label}"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@id/tv_halfdaypackage"
                />
            <TextView
                android:layout_below="@id/tv_halfdaypackage"
                android:text="@{viewModel.descs}"
                android:textSize="12sp"
                android:textColor="@color/road_record_text"
                style="@style/wrap"/>
            <TextView
                android:id="@+id/tv_price"
                android:text='@{"Â¥"+BigDecimalUtils.format(viewModel.price)}'
                android:textColor="@color/color_black"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                style="@style/wrap"/>
        </RelativeLayout>
    </LinearLayout>
</layout>